<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/dimen_dp4">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin_dp16"
        android:layout_marginTop="@dimen/dimen_dp20"
        android:layout_marginEnd="@dimen/dimen_dp24">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dimen_dp35"
            android:layout_height="@dimen/dimen_dp35"
            android:layout_marginTop="@dimen/dimen_dp4"
            android:adjustViewBounds="true"
            android:padding="@dimen/dimen_dp8"
            android:scaleType="fitXY"
            android:src="@drawable/ic_user_small" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_dp8"
            android:layout_weight="1"
            android:padding="@dimen/dimen_dp2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16sp"
            tools:text="Username" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/dimen_dp45"
            android:layout_height="@dimen/dimen_dp45"
            android:adjustViewBounds="true"
            android:padding="@dimen/horizontal_margin_dp16"
            android:rotation="180"
            app:srcCompat="@drawable/ic_back_black" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_dot_5"
        android:layout_marginStart="@dimen/horizontal_margin_dp16"
        android:layout_marginEnd="@dimen/horizontal_margin_dp16"
        android:background="@color/gray"
        android:padding="@dimen/dimen_dp8" />
</androidx.appcompat.widget.LinearLayoutCompat>