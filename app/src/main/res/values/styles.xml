<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.AppBarOverlay" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="MyTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/blur_dark_bg</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@color/colorSecondary</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="MyThemeDialogSlide" parent="@android:style/Theme.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/blur_dark_bg</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowAnimationStyle">@style/DialogFadeInOut</item>
    </style>
    <style name="MyThemeDialogSelect" parent="@style/MyThemeDialogSlide">
        <item name="android:windowBackground">@drawable/blur_light_bg</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="DialogFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="DialogSlideUpDown">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>


    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_dp50</item>
        <item name="android:textSize">@dimen/text_20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/dimen_dp8</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="heading1">
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="heading2">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>


    <style name="addRemarkTextViewHeading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_sec</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="addRemarkEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_dp50</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:textColorHint">@color/text_sec</item>
        <item name="android:padding">@dimen/dimen_dp12</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_dp4</item>
        <item name="android:background">@drawable/edittext_bg</item>
    </style>

</resources>